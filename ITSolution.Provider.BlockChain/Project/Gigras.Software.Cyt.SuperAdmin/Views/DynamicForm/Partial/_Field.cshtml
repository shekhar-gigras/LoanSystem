<!-- Modal for fields -->
<div class="modal fade" id="fieldModal" tabindex="-1" aria-labelledby="fieldModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title full-page-heading" id="fieldModalLabel">Manage fields</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="formFieldContainer" style="display: none;">
                    <h5 id="formFieldHeading">Add New field</h5>
                    <form id="fieldForm" name="fieldForm" method="post">
                        <input type="hidden" class="form-control" id="SectionId" name="SectionId" />
                        <input type="hidden" class="form-control" id="formfieldId" name="formfieldId" value="0" />
                        <div class="mb-3">
                            <label for="FieldType" class="form-label">Field</label>
                            <select class="form-control" id="FieldTypeId" name="FieldTypeId" required>
                                <option value="">Select a Field</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="FieldOrder" class="form-label">Order</label>
                            <input type="number" step="1" value="1" class="form-control" id="FieldOrder" name="FieldOrder" required />
                        </div>
                        <div class="mb-3">
                            <label for="CssClass" class="form-label">Css Class</label>
                            <input type="text" class="form-control" id="CssClass" name="CssClass" required />
                        </div>
                        <div class="mb-3">
                            <label for="JavaScript" class="form-label">JavaScript</label>
                            <textarea class="form-control" id="JavaScript" name="JavaScript" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" onclick="hideFormFIeld()">Discard</button>
                    </form>
                </div>
                <!-- Add Button above the table -->
                <button class="btn btn-primary mb-3" id="addFormFieldButton">Add field</button>

                <!-- field List -->
                <div class="field-list">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Field Type</th>
                                <th>Component</th>
                                <th>Order</th>
                                <th>Css Class</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="fieldListBody">
                            <!-- fields will be dynamically added here -->
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script src="~/js/sadmin/dynamic-field-form.js"></script>