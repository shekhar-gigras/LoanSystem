@{
    ViewData["Title"] = "Access Denied";
}
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        height: 100vh;
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: #333;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .container {
        text-align: center;
        background: rgba(255, 255, 255, 0.9);
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
        width: 90%;
        max-width: 400px;
    }

        .container h1 {
            font-size: 24px;
            color: #ff4d4f;
            margin-bottom: 20px;
        }

        .container p {
            font-size: 16px;
            margin-bottom: 20px;
            color: #555;
        }

        .container a {
            display: inline-block;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 16px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            margin: 10px;
        }

            .container a:hover {
                background-color: #0056b3;
                transform: scale(1.05);
            }

    .icon {
        font-size: 50px;
        color: #ff4d4f;
        margin-bottom: 20px;
    }

    footer {
        position: absolute;
        bottom: 10px;
        text-align: center;
        width: 100%;
        color: #fff;
        font-size: 14px;
    }
</style>
<div class="container">
    <i class="fas fa-lock icon"></i>
    <h1>@ViewData["Title"]</h1>
    <p>You do not have permission to access this page.</p>
    <a href="/sauth/logout">Log Out</a>
    <a href="javascript:history.back()">Go Back</a>
</div>
